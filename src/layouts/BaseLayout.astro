---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
const currentUrl = Astro.url.pathname;
const title = pageTitle
  ? `${pageTitle} - Empty Space Heart`
  : "Empty Space Heart";
---

<html lang="en">
  <head>
    <script is:inline>
      const theme = (() => {
        const localStorageTheme = localStorage?.getItem("theme") ?? "";
        if (["dark", "light"].includes(localStorageTheme)) {
          return localStorageTheme;
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- HTML Meta Tags -->
    <meta name="description" content="A minimalist hub for Celeste resources" />

    <!-- Facebook Meta Tags -->
    <meta
      property="og:url"
      content=`https://emptyspaceheart.com${currentUrl}`
    />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="A minimalist hub for Celeste resources"
    />
    <meta
      property="og:image"
      content="https://emptyspaceheart.com/favicon.png"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="emptyspaceheart.com" />
    <meta
      property="twitter:url"
      content=`https://emptyspaceheart.com${currentUrl}`
    />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="A minimalist hub for Celeste resources"
    />
    <meta
      name="twitter:image"
      content="https://emptyspaceheart.com/favicon.png"
    />
    <script defer src="https://cloud.umami.is/script.js" data-website-id="0c1f5df4-a243-47cc-b4fe-7b334a6c2179"></script>
  </head>
  <body>
    <div id="slim">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
    <script>
      import "../scripts/buttons.js";
    </script>
  </body>
</html>
<style>
  #slim {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    min-width: 17.5rem;
    width: 22.5rem;
    margin: 0 1.25rem;
  }

  main {
    flex: 1;
  }
</style>

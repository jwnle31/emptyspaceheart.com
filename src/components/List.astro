---
import Link from "./Link.astro";
import linksData from "../data/links.json";

const { title, category } = Astro.props;
const categoryData = linksData.filter((link) => link.type === category);
---

<div id={category} class="list-container">
  <h5>{title}</h5>
  <ul>
    {
      categoryData.map((link) => (
        <Link
          icon={link.icon}
          text={link.text}
          url={link.url}
          flag={link.flag || ""}
          internal={false}
        />
      ))
    }
  </ul>
</div>

<style>
  h5 {
    font-size: 1.5rem;
    margin-bottom: 1.25rem;
  }

  ul {
    padding: 0;
  }

  li {
    list-style: none;
  }
</style>
